# AV Metadata Scraper Docker Environment Configuration
# Copy this file to .env and customize the values for your setup

# Directory Configuration
# Source directory containing video files (host path)
SOURCE_DIR=./source

# Target directory for organized files (host path)
TARGET_DIR=./organized

# Configuration directory (host path)
CONFIG_DIR=./config

# Logs directory (host path)
LOGS_DIR=./logs

# Application Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Configuration file path inside container
CONFIG_FILE=/app/config/config.yaml

# Scraper Configuration
# JavDB login credentials (optional, leave empty to disable login)
JAVDB_USERNAME=
JAVDB_PASSWORD=

# Processing Configuration
# Maximum concurrent files to process
MAX_CONCURRENT_FILES=2

# Maximum concurrent scraper requests
MAX_CONCURRENT_REQUESTS=2

# Maximum concurrent image downloads
MAX_CONCURRENT_DOWNLOADS=2

# Network Configuration
# HTTP proxy URL (optional)
HTTP_PROXY=
HTTPS_PROXY=

# Container Configuration
# Memory limit for the container
MEMORY_LIMIT=2G

# CPU limit for the container
CPU_LIMIT=2.0

# Timezone for the container
TZ=UTC

# Security Configuration
# Run container as specific user ID (optional)
PUID=1000
PGID=1000

# Advanced Configuration
# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable safe mode (copy files instead of moving)
SAFE_MODE=true

# Create metadata files alongside videos
CREATE_METADATA_FILES=true

# Download images (cover, poster, screenshots)
DOWNLOAD_IMAGES=true

# Resize large images
RESIZE_IMAGES=false

# Create thumbnail versions of images
CREATE_THUMBNAILS=false